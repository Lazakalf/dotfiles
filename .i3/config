workspace $ws1 output LVDS-0
workspace $ws2 output VGA-0

bar {
  status_command i3blocks -c ~/.i3/i3blocks.conf 2>~/.i3blocks.err
  strip_workspace_numbers yes
  tray_output LVDS-0
  mode dock
  position top
  height 20
  font pango: Meslo LG S DZ for Powerline Bold 8
  colors {
    separator #928374
    background #282828
    statusline #ebdbb2
    focused_workspace #689d6a #689d6a #282828
    active_workspace #1d2021 #1d2021 #928374
    inactive_workspace #32302f #32302f #928374
    urgent_workspace #cc241d #cc241d #ebdbb2
  }
}

