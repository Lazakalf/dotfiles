#switch into entertainment mode
bindsym $mod+Shift+n exec sh ~/dotfiles/scripts/entertainment_mode.sh

bar {
    status_command i3blocks -c ~/.i3/i3blocks.conf 2>~/.i3/.i3blocks.err
    strip_workspace_numbers no
    tray_output eDP-1
    tray_padding 0
    mode dock
    position top
    height 24
    font pango: Meslo LG S for Powerline Bold 14
    colors {
        separator #928374
        background #2F343F
        statusline #ebdbb2
        focused_workspace #5294E2 #5294E2 #2F343F
        active_workspace #1d2021 #1d2021 #B9BCB5
        inactive_workspace #2F343F #2F343F #B9BCB5
        urgent_workspace #cc241d #cc241d #ebdbb2
    }
}

